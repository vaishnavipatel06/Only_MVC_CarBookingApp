@model IEnumerable<WebApplication_MVC.Models.Booking>

@{
    ViewData["Title"] = "Index";
}

<h1>Booking History</h1>

<p>
    <a asp-action="Create" class="booking-link">Book </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BookingID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookingDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Source)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Destination)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Distance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BookingID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CarID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookingDate)
            </td>
            <td>
                    <span class="badge badge-success"> @Html.DisplayFor(modelItem => item.Status)</span>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Source)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Destination)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Distance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { @class = "action-link action-edit" }) |
                @Html.ActionLink("Details", "Details", new { @class = "action-link action-details" }) |
                @Html.ActionLink("Delete", "Delete", new { @class = "action-link action-delete" })
            </td>
        </tr>
}
    </tbody>
</table>
<style>
    h1 {
        text-align: center;
        font-size: 2.5rem;
        font-weight: bold;
        color: #343a40; /* Dark color for better visibility */
        margin-bottom: 1.5rem;
        padding: 0.5rem;
        border-bottom: 2px solid #dee2e6; /* Adds an underline effect */
    }


    .table {
        width: 100%;
        margin-bottom: 1rem;
        background-color: transparent;
        border-collapse: collapse;
    }

        .table th,
        .table td {
            padding: 0.75rem;
            vertical-align: top;
            border-top: 1px solid #dee2e6;
            text-align: center;
        }

        .table thead th {
            vertical-align: bottom;
            border-bottom: 2px solid #dee2e6;
            background-color: #343a40;
            color: white;
        }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: rgba(0, 0, 0, 0.05);
    }

    .table-hover tbody tr:hover {
        background-color: #f1f1f1;
    }

    .table-bordered {
        border: 1px solid #dee2e6;
    }

    .badge {
        display: inline-block;
        padding: 0.25em 0.4em;
        font-size: 75%;
        font-weight: 700;
        line-height: 1;
        text-align: center;
        white-space: nowrap;
        vertical-align: baseline;
        border-radius: 0.25rem;
    }


    .btn {
        display: inline-block;
        font-weight: 400;
        color: #212529;
        text-align: center;
        vertical-align: middle;
        background-color: transparent;
        border: 1px solid transparent;
        padding: 0.375rem 0.75rem;
        font-size: 1rem;
        line-height: 1.5;
        border-radius: 0.25rem;
        cursor: pointer;
    }

    .btn-warning {
        background-color: #ffc107;
        color: white;
        border-color: #ffc107;
    }

    .btn-info {
        background-color: #17a2b8;
        color: white;
        border-color: #17a2b8;
    }

    .btn-danger {
        background-color: #dc3545;
        color: white;
        border-color: #dc3545;
    }

    .table-success {
        background-color: #c3e6cb;
    }

    .table-warning {
        background-color: #ffeeba;
    }

    .table-danger {
        background-color: #f5c6cb;
    }

    /* Optional Custom Styling for the Status Badges */
    .badge {
        font-size: 1rem; /* Slightly increase badge size */
        padding: 10px; /* Add some padding to give a button-like feel */
        border-radius: 8px; /* Round the corners for a more button-like look */
    }

    /* Adjust padding for the table cells */
    td {
        text-align: center;
        vertical-align: middle; /* Vertically center-align the badge */
        padding: 15px;
    }

    /* Header Styling */
    th {
        background-color: #343a40;
        color: white;
        text-align: center;
        padding: 10px;
    }

    /* General styling for all action links */
    .action-link {
        display: inline-block; /* Allows padding and makes it look like a button */
        padding: 6px 12px; /* Adds padding around the link */
        margin: 0 5px; /* Adds some space between each button */
        border-radius: 5px; /* Slightly rounded corners */
        font-size: 0.9rem; /* Adjust the text size */
        text-decoration: none; /* Removes underline from links */
        font-weight: bold; /* Bold text for visibility */
        color: white; /* Default white text */
        text-align: center; /* Center text */
        cursor: pointer; /* Pointer cursor on hover */
        transition: background-color 0.3s ease, transform 0.2s ease; /* Smooth hover transition */
    }

    /* Specific styles for each action */
    .action-edit {
        background-color: #17a2b8; /* Light blue background for Edit */
    }

    .action-details {
        background-color: #6c757d; /* Gray background for Details */
    }

    .action-delete {
        background-color: #dc3545; /* Red background for Delete */
    }

    /* Hover effects for each button */
    .action-link:hover {
        opacity: 0.9; /* Slight opacity change on hover */
        transform: scale(1.05); /* Slightly enlarges the button on hover */
    }

    /* Optional: add icon spacing if needed */
    .action-link i {
        margin-right: 5px; /* Space between the icon and text */
    }

    .booking-button {
        display: inline-block; /* Make it an inline-block element */
        padding: 10px 20px; /* Add padding for size */
        background-color: #007BFF; /* Primary button color (blue) */
        color: white; /* Text color */
        text-decoration: none; /* Remove underline */
        border-radius: 5px; /* Rounded corners */
        font-size: 16px; /* Font size */
        transition: background-color 0.3s; /* Smooth transition for hover effect */
    }

        .booking-button:hover {
            background-color: #0056b3; /* Darker blue on hover */
        }

</style>